<div class="overlay"></div>

    <div class="modal">

        <span class="close" onclick="closeModal()" title="Закрыть Modal">&times;</span>
        <div class="head-modal">
            <a class="login-btn active" onclick="select(event)">вход</a>
            <a class="reg-btn" onclick="select(event)">регистрация</a>
        </div>

        <form class="modal-content-login animate" action="/auth/login" method="post">
            <div>
                <label for="username">Логин</label>
                <input class="name" type="text" placeholder="Введите имя пользователя" name="username" required>
            </div>
            <div>
                <label for="password">Пароль</label>
                <input class="password" type="password" placeholder="Введите пароль" name="password" required>
            </div>
            <div class="button-modal">
                <button type="submit" class="singIn">Войти в аккаунт</button>
            </div>
        </form>

        <form class="modal-content-register animate" action="auth/register" method="post">
            <div>
                <label for="username">Логин</label>
                <input class="name" type="text" placeholder="Введите имя пользователя" name="username" id="username" required>
            </div>

            <div class="reg">
                <label for="telephoneNumber">Телефон</label>
                <input class="telPhone" type="tel" placeholder="Ведите номер телефона" name="telephoneNumber" id="telephoneNumber"
                    pattern="^((8|\+7)[\- ]?)?(\(?\d{3}\)?[\- ]?)?[\d\- ]{7,10}$" required>
            </div>

            <div>
                <label for="password">Пароль</label>
                <input class="password" type="password" placeholder=" Введите пароль" name="password" id="password" required minlength="6">
            </div>

            <div class="reg">
                <label for="checkPassword">Повторите пароль</label>
                <input class="password" type="password" placeholder=" Повторите пароль" name="checkPassword" id="checkPassword" required>
            </div>


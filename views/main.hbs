{{#>head}}{{/head}}

<body>
    {{#>loginModal}}{{/loginModal}}
    {{#>header}}{{/header}}

    <div class="line">
        <hr>
    </div>

    <main>
        <article>
            <section class="wrapperSlider">
                <div class="swiper mySwiperHome">
                    <div class="swiper-wrapper">
                        {{#each sliderItems}}
                        <div class="swiper-slide">
                            <div class="info-box">
                                <h3>{{this.productName}}</h3>
                                <a  href="/product/{{this.id}}" class="moreInfo">Узнать больше</a>
                            </div>
                            <img src="/img/product-images/{{this.images.[0]}}" alt="{{this.images.[0]}}">
                        </div>
                        {{/each}}
                    </div>
                    <div class="swiper-pagination"></div>
                </div>

            </section>

            <section class="content">

                <h2>Рекомендации для вас</h2>
                <div class="content-box">
                    <script id="recommendedProduct" type="text/x-handlebars-template">
                        \{{#each products}}
                        <div class="item">
                        <a href="/product/\{{this.id}}" class="link-item">
                            <img class="picture" src="/img/product-images/\{{this.images.[0]}}" alt="\{{this.images.[0]}}">
                            <p class="name">\{{this.productName}}</p>
                            <p class="category">\{{this.category.name}}</p>
                            <p class="price">\{{this.price}} ₽</p>
                            <a href="/product/\{{this.id}}" class="addBusket">Подробнее</a>
                        </a>
                        </div>
                        \{{/each}}
                    </script>
                    {{#each recommendedItems}}
                    <div class="item">
                        <a href="/product/{{this.id}}" class="link-item">
                            <img class="picture" src="/img/product-images/{{this.images.[0]}}" alt="{{this.images.[0]}}">
                            <p class="name">{{this.productName}}</p>
                            <p class="category">{{this.category.name}}</p>
                            <p class="price">{{this.price}} ₽</p>
                            <a href="/product/{{this.id}}" class="addBusket">Подробнее</a>
                        </a>
                    </div>
                    {{/each}}
                </div>
                <a class="more">Показать ещё</a>
            </section>

            <section class="map">
                <h2>Мы на картах</h2>
                <div class="map-box">
                    {{!-- <script type="text/javascript" charset="utf-8" async
                        src="https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3A613e31463ca9038288f4922b16d7b6856a358b0ef474d7ebe22febb0b9af8169&amp;width=100%25&amp;height=700&amp;lang=ru_RU&amp;scroll=false"></script>
                </div> --}}
                    <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d5558.468682634289!2d40.12933574501631!3d45.84660909837158!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x1739392bcd0856bd!2z0KHRgtGD0LTQuNGPINGA0LXQvNC-0L3RgtCwINCg0JjQng!5e0!3m2!1sru!2sru!4v1650291007367!5m2!1sru!2sru" width="100%" height="700" style="border:0;" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </section>
        </article>
    </main>
    {{#>footer}}
        <script src="/js/cart.js"></script>
    {{/footer}}
</body>

</html>
{{#>head}}{{/head}}

<body>

    {{#>loginModal}}{{/loginModal}}
    {{#>header}}{{/header}}

<main>
    <article>
        <section class="content">
                
                <h2>{{category.name}}</h2>   {{!-- доделать --}}
                <div class="content-box">
                    {{#each productList}}
                    <div class="item">
                        <a href="/product/{{this.id}}">
                            <img class="picture" src="/img/{{this.foto}}" alt="{{this.foto}}">
                            <p class="name">{{this.productName}}</p>
                            <p class="category">{{this.category.name}}</p>
                            <p class="price">{{this.price}} ₽</p>
                            <a href="#" class="addBusket">В корзину</a>
                        </a>
                    </div>
                    {{/each}}
                </div>
                <a href="#" class="more">Показать ещё</a>
            </section>
    </article>
</main>

    {{#>footer}}{{/footer}}

</body>

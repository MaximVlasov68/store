{{#>head}}
<link rel="stylesheet" type="text/css" href="/css/cart.css">
{{/head}}

<body>

    {{#>cartModal}}{{/cartModal}}
    {{#>loginModal}}{{/loginModal}}
    {{#>header}}{{/header}}

    <div class="line">
        <hr>
    </div>

    <main>
        <article>
            <section class="wrapperCart">
                <h2> Корзина </h2>

                <div class="box-cart">
                    <div class="head-box">
                        <div class="move-box">
                            <label>
                                <input type="checkbox"> Выбрать все
                            </label>
                            <a href="#" class="deleteItem">Удалить выбранные</a>
                        </div>
                        <p class="text">Скидка при покупке от 5 000 – 5%, 10 000 - 10%</p>
                    </div>

                    <div class="line">
                        <hr>
                    </div>
                    <script id="cart-item" type="text/x-handlebars-template">
                        \{{#each products}}
                        <div class="cart-item">
                            <div class="product-box">
                                <div class="left-item">
                                    <input type="checkbox">
                                        <img class="productImg" src="\{{this.image}}" alt="фото продукта">
                                            <div class="info-product">
                                                <p class="productName">\{{this.name}}</p>
                                                <p class="productWeight">\{{this.weight}}</p>
                                            </div>
                                        </div>
                                        <p class="productPrice">\{{this.price}} ₽</p>
                                        <div class="counter">
                                            <a class="buttonCountMinus" onclick="minus(this)"><span class="minus">–</span></a>
                                            <div class="buttonCountNumber">\{{this.quantity}}</div>
                                            <a class="buttonCountPlus" onclick="plus(this)"><span class="plus">+</span></a>
                                        </div>
                                </div>
                                <div class="line">
                                    <hr>
                                </div>
                            </div>
                        </div>
                        \{{/each}}
                    </script>
                </div>

                <div class="count-box">
                    <div class="left-count">
                        <p class="weightText">Общий вес заказа 30.7 кг</p>
                        <p class="deliveryText">Минимальный заказ 2 000 ₽ для доставки</p>
                        <div class="input-box">
                            <label class="b-contain">
                                <span>Самовывоз</span>
                                <input name="delivery" type="radio" checked>
                                <div class="b-input"></div>
                            </label>
                            <label class="b-contain">
                                <span>Доставка курьером</span>
                                <input name="delivery" type="radio" disabled>
                                <div class="b-input"></div>
                            </label>
                        </div>
                    </div>

                    <div class="right-count">
                        <p class="sumText">Итого: <span class="sum">31 000 ₽</span> </p>
                        <p class="discountText">35 000 ₽</p>
                        <button class="forming">Оформить заказ</button>
                    </div>
                </div>

            </section>
        </article>
    </main>

    {{#>footer}}
    <script src="/js/cart.js"></script>
    {{/footer}}
</body>

</html>
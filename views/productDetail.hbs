                {{#with product}}
                    ID: {{this.id}}
                    Название: {{this.productName}}
                    Цена: {{this.price}}
                    Цвет: {{this.color}}
                    В наличии: {{this.numberOfStock}}<br>
                    <img src="/img/{{this.foto}}">
                {{/with}}
            </section>
            <section>
                Описание
            </section>
            <section>
                Характеристики
            </section>
        </article>
    </main>

